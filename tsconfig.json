{
  "compilerOptions": {
    "target": "esnext",  // or a specific ECMAScript version like "es6", "es2015", "es2020", etc.
    "module": "esnext",  // Use "es2020" or "esnext" for ECMAScript modules
    "outDir": "./build",  // Output directory for compiled files
    "rootDir": "./src",   // Root directory of your source files
    "moduleResolution": "node",  // Module resolution strategy
    "declaration": true,  // Generates corresponding '.d.ts' file
    "esModuleInterop": true,  // Enables interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true,  // Ensures case sensitivity in file names
    "strict": true,  // Enables all strict type-checking options
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["./src/**/*", "src/index.ts"],
  "exclude": ["node_modules", "build", "examples"] 
}
